@page
@model DTO.U20180744.Web.Pages.MateriaPage.MateriaModel
@{
}

<h1>Listado de Materias</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Materia</th>
            <th>Creditos</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materias)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NombreMateria</td>
                <td>@item.Creditos</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/MateriaPage/Editar" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/MateriaPage/Eliminar" asp-route-id="@item.Id">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>

</table>